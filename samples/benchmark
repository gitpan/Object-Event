#!perl

package foo;
use strict;
no warnings;

use base qw/Object::Event/;

sub new {
   my $this  = shift;
   my $class = ref($this) || $this;
   $class->SUPER::new (@_);
}

our $cnt;
sub test { $cnt++ }

package main;
use strict;
no warnings;

use Benchmark qw/:all/;

my $f = foo->new (enable_methods => 1);

for (1..10) {
   $f->reg_cb (test => sub {
      my ($f) = @_;
      $foo::cnt++;
   });
}

my $ev;

timethese (100000, {
   simple => sub { $f->event ('test') },
   method => sub { $f->test }
});

print "$foo::cnt\n";
